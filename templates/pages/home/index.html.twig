{% extends 'pages/home/base.html.twig' %}

{% block body %}
    <div {{ vue_component('home/Home', {
        configs:  config,
        params,
        data,
        user: app.user ? {
            id: app.user.id,
            name: app.user.username,
            email: app.user.email,
        } : null,
        }
    ) }}></div>

    <!-- Section Contact pour utilisateurs non connectés -->
    {% if not app.user %}
        <section class="py-16 bg-white">
            <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-12">
                    <h2 class="text-3xl font-bold text-gray-800 mb-4">Besoin d'aide ?</h2>
                    <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                        Vous n'avez pas de compte ? Pas de problème ! Contactez-nous directement et nous vous aiderons dans votre recherche de logement.
                    </p>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                    <!-- Informations de contact -->
                    <div class="space-y-8">
                        <div class="flex items-start space-x-4">
                            <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
                                <i class="fas fa-envelope text-white text-xl"></i>
                            </div>
                            <div>
                                <h3 class="text-lg font-semibold text-gray-800 mb-2">Support Email</h3>
                                <p class="text-gray-600">{{ noreplyEmail }}</p>
                                <p class="text-sm text-gray-500">Réponse sous 24h</p>
                            </div>
                        </div>

                        <div class="flex items-start space-x-4">
                            <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-r from-green-500 to-blue-600 rounded-full flex items-center justify-center">
                                <i class="fas fa-clock text-white text-xl"></i>
                            </div>
                            <div>
                                <h3 class="text-lg font-semibold text-gray-800 mb-2">Disponibilité</h3>
                                <p class="text-gray-600">7j/7 - 24h/24</p>
                            </div>
                        </div>

                        <!-- Conseils utiles -->
                        <div class="bg-blue-50 rounded-2xl p-6 border border-blue-100">
                            <h4 class="text-lg font-semibold text-blue-900 mb-3 flex items-center">
                                <i class="fas fa-lightbulb text-yellow-500 mr-2"></i>
                                Conseils pour un message efficace
                            </h4>
                            <ul class="space-y-2 text-blue-800 text-sm">
                                <li class="flex items-start space-x-2">
                                    <i class="fas fa-check text-green-500 mt-1 text-xs"></i>
                                    <span>Précisez le type de logement recherché</span>
                                </li>
                                <li class="flex items-start space-x-2">
                                    <i class="fas fa-check text-green-500 mt-1 text-xs"></i>
                                    <span>Mentionnez votre budget approximatif</span>
                                </li>
                                <li class="flex items-start space-x-2">
                                    <i class="fas fa-check text-green-500 mt-1 text-xs"></i>
                                    <span>Indiquez vos préférences de localisation</span>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Formulaire de contact -->
                    <div class="card-modern p-8">
                        <h3 class="text-2xl font-bold text-gray-800 mb-6 text-center">Contactez-nous</h3>

                        {{ form_start(contactForm, {'attr': {'class': 'space-y-6'}}) }}

                        <!-- Nom -->
                        <div>
                            <label for="{{ contactForm.name.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                                {{ contactForm.name.vars.label }}
                                <span class="text-red-500">*</span>
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-user text-gray-400"></i>
                                </div>
                                {{ form_widget(contactForm.name, {
                                    'attr': {
                                        'class': 'block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 text-gray-900 placeholder-gray-500'
                                    }
                                }) }}
                            </div>
                            {% if contactForm.name.vars.errors|length > 0 %}
                                <div class="mt-2 text-sm text-red-600">
                                    {% for error in contactForm.name.vars.errors %}
                                        <p>{{ error.message }}</p>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        <!-- Email -->
                        <div>
                            <label for="{{ contactForm.email.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                                {{ contactForm.email.vars.label }}
                                <span class="text-red-500">*</span>
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-envelope text-gray-400"></i>
                                </div>
                                {{ form_widget(contactForm.email, {
                                    'attr': {
                                        'class': 'block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 text-gray-900 placeholder-gray-500'
                                    }
                                }) }}
                            </div>
                            {% if contactForm.email.vars.errors|length > 0 %}
                                <div class="mt-2 text-sm text-red-600">
                                    {% for error in contactForm.email.vars.errors %}
                                        <p>{{ error.message }}</p>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        <!-- Sujet -->
                        <div>
                            <label for="{{ contactForm.title.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                                {{ contactForm.title.vars.label }}
                                <span class="text-red-500">*</span>
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <i class="fas fa-tag text-gray-400"></i>
                                </div>
                                {{ form_widget(contactForm.title, {
                                    'attr': {
                                        'class': 'block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 text-gray-900 placeholder-gray-500'
                                    }
                                }) }}
                            </div>
                            {% if contactForm.title.vars.errors|length > 0 %}
                                <div class="mt-2 text-sm text-red-600">
                                    {% for error in contactForm.subject.vars.errors %}
                                        <p>{{ error.message }}</p>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        <!-- Message -->
                        <div>
                            <label for="{{ contactForm.message.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                                {{ contactForm.message.vars.label }}
                                <span class="text-red-500">*</span>
                            </label>
                            <div class="relative">
                                <div class="absolute top-3 left-3 flex items-start pointer-events-none">
                                    <i class="fas fa-comment text-gray-400 mt-1"></i>
                                </div>
                                {{ form_widget(contactForm.message, {
                                    'attr': {
                                        'class': 'block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 text-gray-900 placeholder-gray-500 resize-none'
                                    }
                                }) }}
                            </div>
                            {% if contactForm.message.vars.errors|length > 0 %}
                                <div class="mt-2 text-sm text-red-600">
                                    {% for error in contactForm.message.vars.errors %}
                                        <p>{{ error.message }}</p>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        <!-- Bouton d'envoi -->
                        <div class="pt-4">
                            {{ form_widget(contactForm.submit, {
                                'attr': {
                                    'class': 'w-full bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-semibold py-4 px-8 rounded-xl transition-all duration-200 transform hover:scale-105 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 flex items-center justify-center space-x-2'
                                }
                            }) }}
                        </div>

                        {{ form_end(contactForm) }}

                        <!-- Note de confidentialité -->
                        <div class="mt-6 text-center">
                            <p class="text-sm text-gray-500">
                                <i class="fas fa-shield-alt mr-2"></i>
                                Vos informations sont protégées et ne seront utilisées que pour vous répondre.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    {% endif %}

    <!-- Messages flash -->
    {% for message in app.flashes('success') %}
        <div id="success-toast" class="fixed top-4 right-4 bg-green-500 text-white px-6 py-4 rounded-xl shadow-lg transform transition-all duration-300 z-50">
            <div class="flex items-center space-x-3">
                <i class="fas fa-check-circle text-xl"></i>
                <span class="font-semibold">{{ message }}</span>
                <button onclick="this.parentElement.parentElement.remove()" class="ml-4 text-white hover:text-green-200">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <script>
            setTimeout(() => {
                const toast = document.getElementById('success-toast');
                if (toast) {
                    toast.remove();
                }
            }, 5000);
        </script>
    {% endfor %}
{% endblock %}
