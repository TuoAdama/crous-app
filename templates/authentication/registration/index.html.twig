{% block content %}
    <div class="auth-form-container text-start mx-auto">
        {{ form_start(form) }}
        <div class="mb-3">
            {{ form_row(form.username) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.email) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.password) }}
        </div>
        {{ form_end(form) }}

        <div class="auth-option text-center pt-5">Avez-vous un compte ? <a class="text-link" href="{{ path('app_login') }}">Se connecter</a>
        </div>
    </div>
{% endblock %}

