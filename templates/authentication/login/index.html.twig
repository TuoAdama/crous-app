{% extends "authentication/base.html.twig" %}
 {% block title %}
     Se connecter
 {% endblock %}

{% block content %}
    <div class="auth-form-container text-start">
        {% if accountDisable %}
            {% include '_partials/_disable-account-message.html.twig' %}
        {% endif %}
        {{ form_start(form, {attr: {'class': 'auth-form login-form'}}) }}
            {{ form_widget(form) }}
            <div class="text-center">
                <button type="submit" class="mt-3 btn app-btn-primary w-100 theme-btn mx-auto">Log In</button>
                <div class="mt-2">
                    <a href="{{ path('app_registration.reset.password') }}">{{ 'password.forget'|trans }}</a>
                </div>
            </div>
        {{ form_end(form) }}
        <div class="auth-option text-center mt-4">{{'no.account'|trans}} <a class="text-link" href="{{ path('app_registration') }}" >{{ 'create.account'|trans }}</a></div>
    </div>
{% endblock %}

