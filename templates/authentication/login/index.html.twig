{% extends "authentication/base.html.twig" %}
 {% block title %}
     Se connecter
 {% endblock %}

{% block content %}
    <div class="auth-form-container text-start">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form class="auth-form login-form" action="{{ path('app_login') }}" method="post">
            <div class="email mb-3">
                <label class="sr-only" for="signin-email">Email</label>
                <input id="signin-email" value="{{ last_username }}" name="_username" type="email" class="form-control signin-email" placeholder="Email address" required="required">
            </div><!--//form-group-->
            <div class="password mb-3">
                <label class="sr-only" for="signin-password">Password</label>
                <input id="signin-password" name="_password" type="password" class="form-control signin-password" placeholder="Password" required="required">
                <div class="extra mt-3 row justify-content-between">
{#                    <div class="col-6">#}
{#                        <div class="form-check">#}
{#                            <input class="form-check-input" type="checkbox" value="" id="RememberPassword">#}
{#                            <label class="form-check-label" for="RememberPassword">#}
{#                                Remember me#}
{#                            </label>#}
{#                        </div>#}
{#                    </div><!--//col-6-->#}
                    <div class="col-6">
                        <div class="forgot-password text-end">
                            <a href="reset-password.html">Mot de passe oublié ?</a>
                        </div>
                    </div><!--//col-6-->
                </div><!--//extra-->
            </div><!--//form-group-->
            <div class="text-center">
                <button type="submit" class="btn app-btn-primary w-100 theme-btn mx-auto">Log In</button>
            </div>
        </form>
        <div class="auth-option text-center pt-5">Pas de compte ? <a class="text-link" href="{{ path('app_registration') }}" >Créer un compte</a></div>
    </div>
{% endblock %}

